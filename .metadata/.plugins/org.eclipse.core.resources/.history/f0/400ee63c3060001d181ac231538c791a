package fso.trab1.guievitar;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;

import fso.trab1.gui.GuiApp;
import fso.trab1.servidor.Servidor;

import javax.swing.JLabel;
import java.awt.Font;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

public class Guievitar {

	private JFrame frmGuiDoEvitar;
	public JTextArea textArea;
	private Servidor serv;
	private GuiApp g;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Guievitar window = new Guievitar();
					window.frmGuiDoEvitar.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Guievitar() {
		initialize();
		frmGuiDoEvitar.setVisible( true );
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frmGuiDoEvitar = new JFrame();
		frmGuiDoEvitar.setTitle("GUI do VAGUEAR");
		frmGuiDoEvitar.setBounds(100, 100, 450, 300);
		frmGuiDoEvitar.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frmGuiDoEvitar.getContentPane().setLayout(null);
		
		frmGuiDoEvitar.addWindowListener(new WindowAdapter() {
			public void windowClosing(WindowEvent e) {
				frmGuiDoEvitar.dispose();
				serv.destroyEvitar();
				g.chckbxEvitar.setSelected(!g.chckbxEvitar.isSelected());
                System.exit(0);
			}
		});
		
		JScrollPane scrollPane = new JScrollPane();
		scrollPane.setBounds(44, 119, 352, 134);
		frmGuiDoEvitar.getContentPane().add(scrollPane);
		
		textArea = new JTextArea();
		scrollPane.setViewportView(textArea);
		
		textArea.append("\r" + "Foi iniciado o vaguear...." + "\n"); 
		
		JLabel lblNewLabel = new JLabel("Vaguear");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 30));
		lblNewLabel.setBounds(160, 33, 118, 52);
		frmGuiDoEvitar.getContentPane().add(lblNewLabel);
	}
}