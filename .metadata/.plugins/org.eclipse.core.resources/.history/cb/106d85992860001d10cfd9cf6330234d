package fso.trab1.guievitar;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JLabel;
import java.awt.Font;

public class Guivaguear {

	private JFrame frmGuiDoVaguear;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Guievitar window = new Guievitar();
					window.frmGuiDoVaguear.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Guivaguear() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frmGuiDoVaguear = new JFrame();
		frmGuiDoVaguear.setTitle("GUI do VAGUEAR");
		frmGuiDoVaguear.setBounds(100, 100, 450, 300);
		frmGuiDoVaguear.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frmGuiDoVaguear.getContentPane().setLayout(null);
		
		JScrollPane scrollPane = new JScrollPane();
		scrollPane.setBounds(44, 119, 352, 134);
		frmGuiDoVaguear.getContentPane().add(scrollPane);
		
		JTextArea textArea = new JTextArea();
		scrollPane.setViewportView(textArea);
		
		JLabel lblNewLabel = new JLabel("Vaguear");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 30));
		lblNewLabel.setBounds(160, 33, 118, 52);
		frmGuiDoVaguear.getContentPane().add(lblNewLabel);
	}
}